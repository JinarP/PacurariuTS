    style.
      body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f4f4f4;
      }
      h1 {
      text-align: center;
      }
      .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 15px;
      }
      .gallery figure {
      position: relative;
      }
      .gallery img {
      width: 100%;
      height: auto;
      max-width: 100%;
      /* Asigurați-vă că imaginea nu depășește lățimea containerului */
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease-in-out;
      }
      .gallery figcaption {
      position: absolute;
      bottom: 0;
      left: 20px;
      width: 90%;
      padding: 10px;
      background-color: rgba(0, 0, 0, 0.7);
      color: #fff;
      text-align: center;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
      }
      .gallery figure:hover figcaption {
      opacity: 1;
      }
      .gallery img:hover {
      transform: scale(1.1);
      }
